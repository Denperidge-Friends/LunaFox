mixin post(date)
    article.post(id=date)
        h4 -----BEGIN OSS ENCRYPTED TRANSMISSION-----
        h5 TRANSMISSION DATE: #{date}
        block
        h4 -----END OSS ENCRYPTED TRANSMISSION-----


doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title LUNAFOX!!
        link(rel="stylesheet", href="/src/lunafox.scss")
    body
        header 
            nav 
                each val in ["10-06-XXXXX", "13-04-XXXXX"]
                    button(value=val) #{val}
            hr

            section#music
                button#prev &lt;
                
                button#play play
                .range 
                    input#volume(type="range" value=10)
                button#next &gt;

            h1#title Lunaf0x's Dataspherespace! 
            
        main
            +post("10-06-XXXXX")
                include:markdown-it posts/10-06-XXXXX.md 


            +post("13-04-XXXXX")
                include:markdown-it posts/13-04-XXXXX.md 

        
        script
            :songs
        
            
        script(src="index.js")
        script(src="music.js" type="module") 